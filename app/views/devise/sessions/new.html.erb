<!-- app/views/devise/sessions/new.html.erb -->
<div class="auth-container">
<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, class: "input-field" %>
  </div>

  <div class="form-group">
    <%= f.label :password, "パスワード" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "input-field" %>
  </div>

  <div class="form-group checkbox">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me, "ログイン状態を保持" %>
  </div>

  <div class="form-actions">
    <%= f.submit "ログイン", class: "login-button" %>
  </div>
<% end %>

  <div class="auth-links">
    <%= link_to "新規登録はこちら", new_user_registration_path %><br>
    <%= link_to "パスワードをお忘れですか？", new_user_password_path %>
  </div>
</div>
